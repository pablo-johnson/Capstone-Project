<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/suggesterImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/user_profile_image" />

        <TextView
            android:id="@+id/suggesterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/suggesterImage"
            tools:text="Pablo Johnson" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/suggesterName"
            android:text="@string/suggestsReadingLabel" />

        <include
            android:id="@+id/bookLayout"
            layout="@layout/item_book"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/suggesterImage" />

    </RelativeLayout>

</android.support.v7.widget.CardView>